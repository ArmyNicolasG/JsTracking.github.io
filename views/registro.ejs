<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<script>

</script>

<body>
  <form action="/validar" method="post">
    <div class="row g-3">

      <div class="col">
        <input type="text" class="form-control" placeholder="NOMBRE" aria-label="NOMBRE" name="NOMBRE" id="NOMBRE"
          required>
      </div>

      <div class="col">
        <input type="text" class="form-control" placeholder="APELLIDO" aria-label="APELLIDO" name="APELLIDO"
          id="APELLIDO" required>
      </div>

      <div class="col">
        <input type="number" class="form-control" placeholder="DOCUMENTO" aria-label="DOCUMENTO" name="DOCUMENTO"
          id="DOCUMENTO" required>
      </div>

      <div class="col">
        <input type="date" class="form-control" placeholder="FECHANACIMIENTO" aria-label="FECHANACIMIENTO"
          name="FECHANACIMIENTO" id="FECHANACIMIENTO" required>
      </div>

      <div class="col">
        <select id="GENERO" name="GENERO">
          <% generos.forEach(function(GENERO) { %>
            <option value="<%= GENERO.GENEROID %>">
              <%= GENERO.DESCRIPCION%>
            </option>
            <% }); %>
        </select>
      </div>

      <div class="col">
        <input type="email" class="form-control" placeholder="CORREOELECTRONICO" aria-label="CORREOELECTRONICO" name="CORREOELECTRONICO"
          id="CORREOELECTRONICO" required>
      </div>

      <div class="col">
        <input type="password" class="form-control" placeholder="CONTRASENA" aria-label="CONTRASENA" name="CONTRASENA"
          id="CONTRASENA" required>
      </div>

      <div class="col">
        <input type="text" class="form-control" placeholder="OCUPACION" aria-label="OCUPACION" name="OCUPACION"
          id="OCUPACION" required>
      </div>

      <div class="col">
        <input type="number" class="form-control" placeholder="NUMEROTELEFONO" aria-label="NUMEROTELEFONO" name="NUMEROTELEFONO"
          id="NUMEROTELEFONO" required>
      </div>
      <input type="submit" value="submit">
    </div>
  </form>
  
  <form action="/direccion" method="post">
    <div class="col">
      <input type="number" class="form-control" placeholder="FAVOR DIGITA TU DOCUMENTO" aria-label="DOCUMENTO" name="DOCUMENTO"
      id="DOCUMENTO" required>
    </div>
    <div class="col">
      <input type="text" class="form-control" placeholder="CALLE" aria-label="CALLE" name="CALLE"
        id="CALLE" required>
    </div>
    
    <div class="col">
      <input type="text" class="form-control" placeholder="PAISID" aria-label="PAISID" name="PAISID"
        id="PAISID" required>
    </div>
    
    <div class="col">
      <input type="text" class="form-control" placeholder="CIUDADID" aria-label="CIUDADID" name="CIUDADID"
        id="CIUDADID" required>
    </div>
    
    <div class="col">
      <input type="text" class="form-control" placeholder="ESTADOID" aria-label="ESTADOID" name="ESTADOID"
        id="ESTADOID" required>
    </div>
    
    <div class="col">
      <input type="text" class="form-control" placeholder="CODIGOPOSTAL" aria-label="CODIGOPOSTAL" name="CODIGOPOSTAL"
        id="CODIGOPOSTAL" required>
    </div>
    <input type="submit" value="submit">
  </form>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>
</body>

</html>